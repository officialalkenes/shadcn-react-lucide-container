// .devcontainer/devcontainer.json
{
	"name": "React Environment, Lucide, and ShadCN Environment for Project",
	"image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:18", // Use Node 18 or adjust if needed
	"postCreateCommand": "npm install -g create-react-app && create-react-app reactshadenv && cd reactshadenv && npm install tailwindcss postcss autoprefixer lucide-react && npx tailwindcss init -p && npm install -D @shadcn/ui && mkdir components",
	"customizations": {
	  "vscode": {
		"extensions": [
		  "dbaeumer.vscode-eslint",
		  "esbenp.prettier-vscode",
		  "bradlc.vscode-tailwindcss"
		]
	  }
	},
	"forwardPorts": [3000],
	"portsAttributes": {
	  "3000": {
		"label": "React App",
		"onAutoForward": "openBrowser"
	  }
	}
  }
  